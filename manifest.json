{
  "manifest_version": 3,
  "name": "EliteApp",
  "version": "1.0.0",
  "description": "Transform your apps with a YouTube Premium style. Sleek icons and pro themes.",
  "author": "",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "EliteApp"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["content.css", "icons/logo-youtube-premium.svg", "icons/logo-youtube-premium-dark.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}
